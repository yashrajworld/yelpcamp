<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">

            <form action="/campgrounds/<%=campground._id  %>?_method=PUT " method="POST" novalidate
                class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title : </label>
                    <input class="form-control" type="text" value="<%=campground.title %> " id="title"
                        name="campground[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location : </label>
                    <input class="form-control" type="text" value="<%=campground.location  %> " id="location"
                        name="campground[location]" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" name="campground[price]" value="<%=campground.price  %> "
                            class="form-control" id="price" aria-label="Amount (to the nearest dollar)"
                            placeholder="0.00" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Description">Description : </label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]"
                        required><%= campground.description %> </textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Add More Images</label>
                    <div class="mb-3">
                        <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                    </div>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img, i) { %>
                        <img src="<%= img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i %>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i %>">Delete ?</label>
                        <%}) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
    </div>